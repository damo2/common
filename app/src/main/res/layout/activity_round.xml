<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RoundImageView 圆角ImageView,边框颜色："
        />
    <!--圆角LinearLayout-->


    <com.app.common.widget.round.RoundImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_test1"
        app:borderColor="#81D4FA"
        app:borderSize="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RoundAngleImageView 圆角ImageView,角度不一样："/>

    <com.app.common.widget.round.RoundAngleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_test1"
        app:radiusBottomLeft="24dp"
        app:radiusBottomRight="12dp"
        app:radiusTopLeft="6dp"
        app:radiusTopRight="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RoundButtonView  圆角Button,带点击颜色，边框颜色，圆角："/>

    <com.app.common.widget.round.RoundButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="8dp"
        android:text="圆角"
        android:textColor="#888888"
        app:backgroundColor="#D1C4E9"
        app:backgroundPressColor="#9575CD"
        app:borderColor="#81D4FA"
        app:borderPressColor="#0277BD"
        app:borderSize="1dp"
        app:isRippleEnable="false"
        app:radius="8dp"
        app:textPressColor="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RoundLinearLayout 圆角Layout里面放2张普通图片："/>

    <com.app.common.widget.round.RoundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BBBBBB"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:backgroundPressColor="#9575CD"
        app:radiusBottomLeft="4dp"
        app:radiusBottomRight="4dp"
        app:radiusTopLeft="8dp"
        app:radiusTopRight="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_test1"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_test1"
            />
    </com.app.common.widget.round.RoundLinearLayout>
</LinearLayout>